<form asp-action="AddUser" method="post" style="text-align:center; margin-top:200px; padding-top:30px; border:solid 1px grey; height:330px; width:250px;">
    <div><span asp-validation-for="Login" class="text-danger"></span></div>
    <input asp-for="Login" style="margin-bottom:20px; text-align:center;" placeholder="Login"/><br />
    <div><span asp-validation-for="Email" class="text-danger"></span></div>
    <input asp-for="Email" style="margin-bottom: 20px; text-align: center;" placeholder="Email"/>
    <div><span asp-validation-for="Password" class="text-danger"></span></div>
    <input asp-for="Password" type="password" style="margin-bottom: 20px; text-align: center;" placeholder="Hasło"/><br />
    <div><span asp-validation-for="RepeatPassword" class="text-danger"></span></div>
    <input asp-for="RepeatPassword" type="password" style="margin-bottom: 20px; text-align: center;" placeholder="Powtórz hasło"/><br /><br />
    <button type="submit" class="btn btn-success">DODAJ UŻYTKOWNIKA</button>
</form>